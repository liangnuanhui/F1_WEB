# F1 Web Application - 开发环境配置模板
# 复制此文件为 .env 并设置真实的密码

# 应用配置
APP_NAME=F1赛事数据网站
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# 后端配置
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
API_V1_STR=/api/v1
PROJECT_NAME=F1 Web API

# 数据库配置 - 请修改为实际密码
DATABASE_URL=postgresql://f1_user:CHANGE_DB_PASSWORD@localhost:5432/f1_web
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=f1_web
DATABASE_USER=f1_user
DATABASE_PASSWORD=CHANGE_DB_PASSWORD

# Redis配置
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# FastF1配置
FASTF1_CACHE_DIR=./cache
FASTF1_LOGGING_LEVEL=INFO

# Celery配置
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=true

# 安全配置 - 请修改为随机密钥
SECRET_KEY=CHANGE_THIS_SECRET_KEY_IN_PRODUCTION
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS配置
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=json

# 缓存配置
CACHE_TTL=3600
CACHE_PREFIX=f1_web

# 数据更新配置
DATA_UPDATE_INTERVAL=300
RACE_UPDATE_INTERVAL=60
CACHE_UPDATE_INTERVAL=600

# 监控配置
SENTRY_DSN=
PROMETHEUS_ENABLED=false