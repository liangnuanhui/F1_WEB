# F1 Web Application - VPS Production Environment
# 复制此文件为 /var/www/f1-web/.env 并修改相应值

# ===========================================
# 数据库配置 (PostgreSQL)
# ===========================================
DATABASE_URL=postgresql://f1_web_user:F1Web2024SecurePass!@localhost:5432/f1_web_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=f1_web_db
DB_USER=f1_web_user
DB_PASSWORD=F1Web2024SecurePass!

# ===========================================
# Redis配置 (Celery & Cache)
# ===========================================
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# ===========================================
# 应用配置
# ===========================================
APP_ENV=production
DEBUG=false
SECRET_KEY=your-very-secure-secret-key-here-change-this
API_V1_STR=/api/v1

# CORS配置
CORS_ORIGINS=https://f1.251125.xyz
CORS_ALLOW_CREDENTIALS=true

# ===========================================
# FastF1 配置
# ===========================================
FASTF1_CACHE_DIR=/var/www/f1-web/data/fastf1_cache
FASTF1_LOG_LEVEL=INFO

# ===========================================
# 日志配置
# ===========================================
LOG_LEVEL=INFO
LOG_FILE=/var/www/f1-web/logs/app.log
ACCESS_LOG=/var/www/f1-web/logs/access.log

# ===========================================
# 数据同步配置
# ===========================================
DATA_UPDATE_INTERVAL=300
RACE_UPDATE_INTERVAL=60
SYNC_TIMEOUT=600

# ===========================================
# 安全配置
# ===========================================
TRUSTED_HOSTS=f1.251125.xyz,localhost
MAX_REQUEST_SIZE=10485760

# ===========================================
# 监控配置 (可选)
# ===========================================
FLOWER_PORT=5555
FLOWER_BASIC_AUTH=admin:secure_password_here